<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@drawable/background"
    tools:context="com.halkomills.moodmap.StatisticsActivity">

    <TextView
        android:text="Frequent moods on Wednesdays"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/latestMoodText" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Moods this month"
        android:id="@+id/textView2"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true"
        android:src="@drawable/chart2_sample" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView2"
        android:layout_below="@+id/latestMoodText"
        android:layout_alignParentStart="true"
        android:src="@drawable/chart1_sample"
        android:layout_above="@+id/textView2" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView3"
        android:layout_below="@+id/textView2"
        android:layout_alignParentStart="true"
        android:src="@drawable/chart2_sample" />

</RelativeLayout>
